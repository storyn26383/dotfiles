# focus window
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# focus space
# cmd + ctrl - l : yabai -m space --focus next || yabai -m space --focus first
# cmd + ctrl - h : yabai -m space --focus prev || yabai -m space --focus last

# focus display
cmd + ctrl - j : yabai -m display --focus next || yabai -m display --focus first
cmd + ctrl - k : yabai -m display --focus prev || yabai -m display --focus last

# swap managed window
shift + alt - h : yabai -m window --swap west
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - l : yabai -m window --swap east

# move managed window
shift + alt + ctrl - h : yabai -m window --warp west
shift + alt + ctrl - j : yabai -m window --warp south
shift + alt + ctrl - k : yabai -m window --warp north
shift + alt + ctrl - l : yabai -m window --warp east

# toggle window split type
alt - s : yabai -m window --toggle split

# rotate windows clockwise and anticlockwise
alt - r : yabai -m space --rotate 90
shift + alt - r : yabai -m space --rotate 270

# fullscreen
alt - f : yabai -m window --toggle zoom-fullscreen

# toggle float
shift + alt - f : yabai -m window --toggle float

# balance size of windows
shift + cmd + ctrl - 0 : yabai -m space --balance

# resize window
shift + cmd + ctrl - h : yabai -m window --resize left:-20:0 || yabai -m window --resize right:-20:0
shift + cmd + ctrl - j : yabai -m window --resize top:0:20 || yabai -m window --resize bottom:0:20
shift + cmd + ctrl - k : yabai -m window --resize top:0:-20 || yabai -m window --resize bottom:0:-20
shift + cmd + ctrl - l : yabai -m window --resize right:20:0 || yabai -m window --resize left:20:0

# fast arrange window
alt + ctrl - left : yabai -m window --grid 1:2:0:0:1:1
alt + ctrl - right : yabai -m window --grid 1:2:1:0:1:1
alt + ctrl - d : yabai -m window --grid 1:3:0:0:1:1
alt + ctrl - f : yabai -m window --grid 1:3:1:0:1:1
alt + ctrl - g : yabai -m window --grid 1:3:2:0:1:1
alt + ctrl - return : yabai -m window --grid 1:1:0:0:1:1
alt + ctrl - c : yabai -m window --grid 6:6:1:1:4:4
