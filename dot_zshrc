export ZSH=$HOME/.oh-my-zsh
export BREW=/opt/homebrew

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Custom plugins may be added to ~/.oh-my-zsh/custom/plugins/
# Example format: plugins=(rails git textmate ruby lighthouse)
# Add wisely, as too many plugins slow down shell startup.
plugins=(base16-shell vim-mode)

# User configuration
export PATH="/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"

# Homebrew
source $ZSH/custom/config/homebrew.zsh

# Theme
source $ZSH/custom/config/theme.zsh

# Load on my zsh
source $ZSH/oh-my-zsh.sh

# You may need to manually set your language environment
export LANG=en_US.UTF-8
export LANGUAGE=en_US.UTF-8
export LC_COLLATE=C
export LC_CTYPE=en_US.UTF-8

# Preferred editor for local and remote sessions
export EDITOR=nvim

# Disable escape sequence processing
export ESCDELAY=0

# history file
export HISTSIZE=2000
export SAVEHIST=2000

# env
[ -f ~/.env ] && source ~/.env

# config
source $ZSH/custom/config/key-bindings.zsh
source $ZSH/custom/config/aliases.zsh
source $ZSH/custom/config/powerline.zsh
source $ZSH/custom/config/scripts.zsh
source $ZSH/custom/config/ssh.zsh
source $ZSH/custom/config/fzf.zsh
source $ZSH/custom/config/bat.zsh
source $ZSH/custom/config/php.zsh
source $ZSH/custom/config/go.zsh
source $ZSH/custom/config/dart.zsh
source $ZSH/custom/config/tmux.zsh
